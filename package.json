{
  "name": "lefdream",
  "version": "1.0.0",
  "description": "LefDream - Client Desktop (Electron + site web)",
  "main": "main.js",
  "author": "TonNom",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.lefdream.app",
    "productName": "LefDream",
    "files": [
      "**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "build/icon.png",
      "category": "public.app-category.social-networking"
    },
    "win": {
      "icon": "build/icon.png",
      "target": "nsis"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  }
}
